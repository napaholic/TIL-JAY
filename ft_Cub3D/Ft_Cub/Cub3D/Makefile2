NAME = megaphone

CC = gcc
CFLAGS = -std=c++03 -Wall -Wextra -Werror -g

RM = rm
RMFLAGS = -rf

SRC_DIR = .
OBJ_DIR = .

SRCS = $(wildcard $(SRC_DIR)/*.cpp)

vpath %.cpp $(SRC_DIR)

OBJS = $(addprefix $(OBJ_DIR)/, $(notdir $(SRCS:.cpp=.o)))

all : $(NAME)

clean :
	@$(RM) $(RMFLAGS) $(OBJS)

fclean : clean
	@$(RM) $(RMFLAGS) $(NAME)

re : fclean all

$(OBJ_DIR) :
	@mkdir $(OBJ_DIR)

$(OBJ_DIR)/%.o : %.cpp | $(OBJ_DIR)
	@$(CC) $(CFLAGS) -c $< -o $@
	@printf "$(CC) $(CFLAGS) -c $< -o $@\n"

$(NAME) : $(OBJS)
	@$(CC) $(CFLAGS) $(OBJS) -o $@
	@printf "$(CC) $(CFLAGS) $(OBJS) -o $@\n"


.PHONY: all clean fclean re